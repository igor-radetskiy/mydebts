<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mydebts.android.app">

    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
        android:name=".MyDebtsApplication"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity android:name=".feature.events.EventsActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".feature.addevent.EventActivity"/>
        <activity android:name=".feature.participant.ParticipantActivity"/>
    </application>

</manifest>