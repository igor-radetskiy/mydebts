<?xml version="1.0" encoding="utf-8"?>
<manifest package="mydebts.android.app"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
        android:name=".MyDebtsApplication"
        android:allowBackup="true"
        android:fullBackupContent="false"
        android:supportsRtl="false"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity android:name=".feature.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".feature.person.PersonActivity"/>
        <activity android:name=".feature.persons.PersonsActivity"
                  android:label="@string/title_people"/>
    </application>

</manifest>