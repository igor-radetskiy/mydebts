<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="iradetskyi.app.debt"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk 
        android:minSdkVersion="14"
        android:targetSdkVersion="17"/>
    
    <application 
        android:label="@string/app_name"
        android:allowBackup="true"
        android:theme="@android:style/Theme.Holo.Light.DarkActionBar" >
        <activity
            android:name="iradetskyi.app.debt.activity.DebtActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="iradetskyi.app.debt.activity.EventActivity" >
            <intent-filter>
                <action android:name="iradetskyi.app.debt.action.CREATE_EVENT_ACTION" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="iradetskyi.app.debt.action.EDIT_EVENT_ACTION" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="iradetskyi.app.debt.action.VIEW_EVENT_ACTION" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="iradetskyi.app.debt.activity.SelectBuddyActivity"
            android:label="@string/activity_select_buddy_title" >
        </activity>
    </application>

</manifest>
